        <div class="container custom_container ">
           <h3 class="text-center" >Reset Password </h3>
           <% if(message) { %>

            <p class="justify-contentt text-center" style="color: red;">  

               <%= message %> </p>

          <% } %>
          
          

           <div id="login" class="page-content card card-block p-3 p-sm-4 ">
              <form  class="needs-validation" action="/resetPassword" method="post" >
                 <div class="form-group">
                    <label for="password" class="font-weight-bolder">New Password</label>
                    <input type="password" name="password"   class="form-control" id="password"  >
                   
                    <div style="color: red;" id="passwordError"></div>
                 </div>
                 <div class="form-group font-weight-bolder" >
                    <label for="confirm_password" class="font-weight-bolder">Confirm Password</label>
                    <input type="password" name="confirm_password" class="form-control" id="confirm_password">
                    <div style="color: red;" id="Confirm_passwordError"></div>
                 </div>
                 <!-- <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="user_check" >
                    <label class="form-check-label" for="user_check">Check me out</label>
                 </div> -->
                 
                 <input type="email" name="email" value="<%= email %>" hidden id="hidden-email">

                  <input type="submit" id="submit" name="submit" class="btn btn-primary mb-3" value="submit">

                
                 
                 
              </form>
           </div>
        </div>
     </div>

     <%- include('../layouts/client/footer') %>

     <script>
      document.getElementById('submit').addEventListener('click', function(event) {
          if (!validateForm()) {
              event.preventDefault();
          }
      });
      
      function validateForm() {
          var email = document.getElementById('password').value.trim();
          var password = document.getElementById('confirm_password').value.trim();
          var emailError = document.getElementById('passwordError');
          var passwordError = document.getElementById('Confirm_passwordError');
      
          var isValid = true;
      
          if (email === "") {
              emailError.textContent = 'Please enter your password address.';
              isValid = false;
              setTimeout(() => {
            emailError.textContent =''
         }, 1000);
          } 
         //  else if (!email.endsWith('@gmail.com')) {
         //      emailError.textContent = 'Please enter a valid email address.';
      
         //      isValid = false;
         //      setTimeout(() => {
         //    emailError.textContent =''
         // }, 1000);
      
         //  } 
          else {
              emailError.textContent = '';
      
          }
      
          if (password === "") {
              passwordError.textContent = 'Please enter your confirm password.';
              isValid = false;
      
              setTimeout(() => {
            passwordError.textContent =''
         }, 1000);
              
          } else {
              passwordError.textContent = '';
          }
      
          return isValid;
      }
      
      
      
         </script>
