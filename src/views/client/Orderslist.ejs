    <%- include('../layouts/client/header') %>
  
    <main class="main">
  
          <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
              <div class="container">
                  <h1 class="page-title">My Profile</h1>
              </div><!-- End .container -->
