                                    <!-- <li class="nav-item">
                                      <form action="">
                                      <a class="nav-link " href="">Sigout</a>
                                    </form>
                                    </li> -->
                                    
                                  </ul>
  
                              </aside>
  
                      <div class="col-md-8 col-lg-9">
  
                          <div class="tab-content">
  
                               <aside class="col col-xl-9 col-lg-8 col-md-6 col-sm-6 mb-4 mb-lg-0">
  
                                  <div class="row w-100" style="gap: 2rem">
  
                                      <div class="container">
  
                      <% if (orderedData.find(obj => 'products' in obj)) { %>
                                  
                          <table class="table table-wishlist table-mobile text-center " style="width: 920px">
  
                                      <thead>
  
                                          <tr>
                                              <th>No</th>
                                              <th>Order Id</th>
                                              <!-- <th>Order Status</th> -->
                                              <th>Payment Satus</th>
                                              <th>Total price</th>
                                              <th>Detailes</th>
                                          </tr>
  
                                      </thead>
  
                                  <tbody class="text-center ">
                                          
                              <% orderedData.slice().reverse().forEach((ordVal , ind)=> {  %>
  
                                  <tr class="fs-4">
     
                                          <td><%= ind + 1 %></td>
     
                                          <td ><%= ordVal?._id %></td>
     
                                          <td class="text-danger " ><%= ordVal?.payment %></td>
     
                                          <td class="" >$<%= ordVal?.orderAmount %></td>
     
                                          <td>
     
                                          <a
                                              href="/orderDetails?id=<%= ordVal?._id  %>"
                                              style="
                                              border-radius: 5px;
                                              border: 0px solid transparent;
                                              outline: 0px;
                                              transition: all ease 0.5s;
                                              background-color: #c96;
                                              "
                                              class="p-3 rounded-3 text-white">Details</a>
     
                                          </td>
                                  </tr>
                                    
                                              
                                  </tbody>
  
  
                              <% }); %>
  
                          </table>
  
                      <% } else {  %>
  
                          <div class="">
  
                              <p class=" text-danger" style="padding-left: 16rem; padding-top:1rem;">Order Not Found</p>
                              
                          </div>
  
                      <% } %>
  
                              <% if(orderedData.find(obj => 'products' in obj)) {%>
  
                                  <div class="wishlist-share">
  
                                      <div class="social-icons social-icons-sm mb-2"> 
  
                                      <label class="social-label">Total Order:</label>
  
                                      <%= orderedData.length %>
  
                                      </div>
  
                                      <!-- End .soial-icons -->
  
                                  </div>
  
                                  <!-- <div class="wishlist-share">
  
                                      <div class="social-icons social-icons-sm mb-2">
                                      <label class="social-label">Total Order:</label>0</div> -->
                                      
                                      <!-- End .soial-icons -->
                                  <!-- </div> -->
  
                              <% } %>
  
                              </div>
  
                          </div>
  
                      </aside>
  
                                </div>
  
                             
  
                            </div><!-- End .col-lg-9 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .dashboard -->
              </div>
  
          </main>
  
