window.location.reload()
}

function addToWishlist(productID){

   fetch(`/wishlist?idd=${productID}`,{method:'post'})

   .then(res=>res.json())

   .then(data=>{

      if(data.success){

         Swal.fire({
                    html: "<b>product add to wishlist</b>",
                    iconHtml: 'G',
                    iconColor: 'green',
                    background: '#f9f6e8',
                    width: '280px',
                    padding: '10px',
                    icon: 'success',
                    toast: true,
                    showConfirmButton: false,
                    timer: 1500,
                });
      }else{
         Swal.fire({
                    html: "<b>product already exist in your wishlist</b>",
                    iconHtml: 'X',
                    iconColor: 'red',
                    background: '#f9f6e8',
                    width: '280px',
                    padding: '10px',
                    icon: 'error',
                    toast: true,
                    showConfirmButton: false,
                    timer: 1500,
                });
      }
   })
}

